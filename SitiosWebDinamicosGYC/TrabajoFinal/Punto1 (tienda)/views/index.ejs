<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Gestión de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Administración de Productos</h1>
        
        <!-- Botón para volver a la tienda -->
        <a href="/" class="btn btn-secondary mb-3">Volver a la tienda</a>

        <a href="/productos/nuevo" class="btn btn-success mb-3">Agregar Producto</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                    <th>Detalle</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
                <tr>
                    <td><%= producto.id %></td>
                    <td><%= producto.nombre %></td>
                    <td>$<%= producto.precio %></td>
                    <td><img src="/images/<%= producto.imagen %>" width="50"></td>
                    <td><%= producto.detalle %></td>
                    <td>
                        <a href="/productos/editar/<%= producto.id %>" class="btn btn-warning">Editar</a>
                        <a href="/productos/eliminar/<%= producto.id %>" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
