<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Clientes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Clientes</h1>
    <a href="/clientes/add" class="btn btn-primary mb-4">Agregar Cliente</a>
    <table class="table">
      <thead>
        <tr>
          <th>CI</th>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Celular</th>
          <th>Correo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% clientes.forEach(cliente => { %>
          <tr>
            <td><%= cliente.ci %></td>
            <td><%= cliente.nombres %></td>
            <td><%= cliente.apellidos %></td>
            <td><%= cliente.celular %></td>
            <td><%= cliente.correo %></td>
            <td>
              <a href="/clientes/edit/<%= cliente._id %>" class="btn btn-warning btn-sm">Editar</a>
              <a href="/clientes/delete/<%= cliente._id %>" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
