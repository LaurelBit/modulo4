<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Agenda de Contactos</h1>
        <a href="/add" class="btn btn-primary mb-3">Añadir Nuevo Contacto</a>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% agendas.forEach(agenda => { %>
                    <tr>
                        <td><%= agenda.id %></td>
                        <td><%= agenda.nombres %></td>
                        <td><%= agenda.apellidos %></td>
                        <td><%= agenda.direccion %></td>
                        <td><%= agenda.telefono %></td>
                        <td>
                            <a href="/edit/<%= agenda.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/delete/<%= agenda.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>